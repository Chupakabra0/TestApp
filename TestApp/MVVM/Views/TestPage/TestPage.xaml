            <Button HorizontalAlignment="Center"
                    Margin="20"
                    Style="{StaticResource BasicButton}"
                    Content="Відповісти"
                    Command="{Binding SendResultCommand}"
                    Visibility="{Binding IsTestNotComplete, Converter={StaticResource BooleanToVisibilityConverter}}">
            </Button>

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center"
                        Margin="0, 0, 50, 0"
                        Visibility="{Binding IsTestComplete, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Style="{StaticResource Header}">
                    <Run Text="{Binding NumberOfCorrect}"></Run>/<Run Text="{Binding NumberOfTests}"></Run>
                </TextBlock>
            </StackPanel>

        </StackPanel>

    </StackPanel>

</Page>
